@using Pustok.BLL.ViewModels
@model CategoryListViewModel

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Settings</h4>
            <p class="card-description">
                <a asp-action="Create" class="btn btn-success">Create</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items ?? [])
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="@item.ImageUrl"></td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-secondary" asp-controller="category" asp-action="details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="category" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>